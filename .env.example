# PayerHub Integration Platform - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ============================================
# Application Settings
# ============================================
APP_NAME=PayerHub
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://payerhub_user:secure_password@localhost:5432/payerhub
DB_HOST=localhost
DB_PORT=5432
DB_NAME=payerhub
DB_USER=payerhub_user
DB_PASSWORD=secure_password
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ============================================
# Redis Cache Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=3600

# ============================================
# MongoDB Configuration (Document Storage)
# ============================================
MONGODB_URL=mongodb://payerhub_user:secure_password@localhost:27017/payerhub_docs
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=payerhub_docs
MONGODB_USER=payerhub_user
MONGODB_PASSWORD=secure_password

# ============================================
# Kafka Event Streaming
# ============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=payerhub
KAFKA_CONSUMER_GROUP=payerhub-consumers
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=true

# ============================================
# API Gateway Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true
API_BASE_URL=http://localhost:8000

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
SECRET_KEY=your-secret-key-change-this-in-production

# ============================================
# AWS Configuration (S3, etc.)
# ============================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=payerhub-documents
USE_S3=false

# ============================================
# MinIO Configuration (S3-compatible local storage)
# ============================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=payerhub
MINIO_SECRET_KEY=payerhub123
MINIO_BUCKET=payerhub-documents
MINIO_SECURE=false

# ============================================
# AI/ML Model Configuration
# ============================================
# OCR Settings
LAYOUTLM_MODEL=microsoft/layoutlmv3-base
TESSERACT_PATH=/usr/bin/tesseract
OCR_DPI=300
USE_GPU=true

# NLP Settings
BIOBERT_MODEL=dmis-lab/biobert-base-cased-v1.1
SPACY_MODEL=en_core_sci_md
NLP_BATCH_SIZE=32

# Model Cache Directory
TRANSFORMERS_CACHE=./models/cache
HF_HOME=./models/huggingface

# ============================================
# Anomaly Detection Configuration
# ============================================
ANOMALY_THRESHOLD=0.5
RECONSTRUCTION_THRESHOLD=0.1
CONTAMINATION=0.1
ANOMALY_USE_GPU=false

# ============================================
# FHIR Configuration
# ============================================
FHIR_BASE_URL=https://fhir.payerhub.com
FHIR_VERSION=R4
FHIR_VALIDATE_RESOURCES=true

# ============================================
# Privacy & Consent Management
# ============================================
CONSENT_DURATION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555
ENABLE_AUDIT_LOGGING=true
PHI_ENCRYPTION_KEY=your-phi-encryption-key-change-this

# ============================================
# Payer Connector Configuration
# ============================================
# UnitedHealthcare
UHC_API_URL=https://api.uhc.com
UHC_CLIENT_ID=your-uhc-client-id
UHC_CLIENT_SECRET=your-uhc-client-secret
UHC_API_KEY=your-uhc-api-key

# Aetna
AETNA_API_URL=https://api.aetna.com
AETNA_CLIENT_ID=your-aetna-client-id
AETNA_CLIENT_SECRET=your-aetna-client-secret
AETNA_API_KEY=your-aetna-api-key

# Blue Cross Blue Shield
BCBS_API_URL=https://api.bcbs.com
BCBS_CLIENT_ID=your-bcbs-client-id
BCBS_CLIENT_SECRET=your-bcbs-client-secret
BCBS_API_KEY=your-bcbs-api-key

# ============================================
# Hub CRM Integration
# ============================================
HUB_CRM_API_URL=https://api.hubcrm.com
HUB_CRM_API_KEY=your-hub-crm-api-key
HUB_CRM_TIMEOUT=30

# ============================================
# Monitoring & Observability
# ============================================
# Prometheus
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# Document Processing
# ============================================
MAX_UPLOAD_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,tiff
DOCUMENT_STORAGE_PATH=./documents
TEMP_STORAGE_PATH=./temp

# ============================================
# Email Configuration (for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@payerhub.com
SMTP_USE_TLS=true

# ============================================
# Webhook Configuration
# ============================================
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_COUNT=3

# ============================================
# Feature Flags
# ============================================
ENABLE_OCR=true
ENABLE_NLP=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_FHIR_CONVERSION=true
ENABLE_PRIVACY_CHECK=true
ENABLE_HUB_INTEGRATION=true

# ============================================
# Development/Testing
# ============================================
TESTING=false
MOCK_PAYER_APIS=false
SEED_DATABASE=false
